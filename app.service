[Unit]
Description=Sample Flask Application
After=mongod.service docker.service

[Service]
Type=simple
Restart=always
RestartSec=5
ExecStart=/usr/bin/docker run --publish 5000:5000 --name app --network "host" odeaver/exampleapp:latest
ExecStop=/usr/bin/docker stop app

[Install]
WantedBy=multi-user.target